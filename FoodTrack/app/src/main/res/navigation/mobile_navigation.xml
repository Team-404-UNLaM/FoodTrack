<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.team404.foodtrack.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_marketListFragment"
            app:destination="@id/marketListFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.team404.foodtrack.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />
    <fragment
        android:id="@+id/cuponFragment"
        android:name="com.team404.foodtrack.ui.cuponUI.CuponFragment"
        android:label="CuponFragment" />
    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.team404.foodtrack.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/marketListFragment"
        android:name="com.team404.foodtrack.ui.market.MarketListFragment"
        android:label="LOCALES"
        tools:layout="@layout/fragment_market_list" >
        <action
            android:id="@+id/action_marketListFragment_to_marketFragment"
            app:destination="@id/marketFragment" />
    </fragment>
    <fragment
        android:id="@+id/marketFragment"
        android:name="com.team404.foodtrack.ui.market.MarketFragment"
        android:label="LOCAL"
        tools:layout="@layout/fragment_market" >
        <action
            android:id="@+id/action_marketFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.team404.foodtrack.ui.market.menu.MenuFragment"
        android:label="MENU"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.team404.foodtrack.ui.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>